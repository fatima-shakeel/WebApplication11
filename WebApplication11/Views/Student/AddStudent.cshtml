@{
    ViewData["Title"] = "AddStudent";
}
@model Student
<h2>AddStudent</h2>

@{if (ViewBag.Message != null)
    {

        <h2 class="alert alert-success"><span class="glyphicon glyphicon-apple"></span>@ViewBag.Message</h2>
        }
    }

<form asp-controller="Student" asp-action="AddStudent" method="post">




    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" asp-for="Name" class="form-control" id="name" />

    </div>

    <div class="form-group">
        <label for="Class">Department:</label>
        <input type="text" asp-for="Class" class="form-control" id="Class" />

    </div>


    <div class="form-group">
        <label for="RollNo">RollNo:</label>
        <input type="text" asp-for="RollNo" class="form-control" id="RollNo" />

    </div>
    <div class="form-group">
        <label for="PhoneNo">PhoneNo:</label>
        <input type="text" asp-for="PhoneNo" class="form-control" id="PhoneNo" />

    </div>

    <div class="form-group">
        <label for="FatherName">FatherName:</label>
        <input type="text" asp-for="FatherName" class="form-control" id="FatherName" />

    </div>

    <div class="form-group">
        <label for="Address">Address:</label>
        <input type="text" asp-for="Address" class="form-control" id="Address" />

    </div>

    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="text" asp-for="Email" class="form-control" id="Email" />

    </div>

    <div class="form-group">
        <label for="Subject">Subject:</label>
        <input type="text" asp-for="Subject" class="form-control" id="Subject" />

    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Display</button>
        <a href="/Student/AllStudents" class="btn btn-success">AllStudents</a>


    </div>

</form>

